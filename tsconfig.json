{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
   "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "ES2015",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["*.ts", "**/*.ts"],
  "exclude": ["dist", "seed", "prisma", "node_modules"]
}
